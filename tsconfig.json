{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}